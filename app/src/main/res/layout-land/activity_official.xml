<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/oConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfficialActivity">

    <TextView
        android:id="@+id/oLocationTxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/light_purple"
        android:padding="3dp"
        android:text="Current Location"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/oOfficialImgView"
        android:layout_width="160dp"
        android:layout_height="210dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oOfficialPartyTxtView"
        app:srcCompat="@drawable/missing" />

    <TextView
        android:id="@+id/oOfficialNameTxtView"
        android:layout_width="478dp"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/oOfficialOfficeTxtView"
        app:layout_constraintEnd_toStartOf="@+id/oOfficialImgView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oLocationTxtView" />

    <TextView
        android:id="@+id/oOfficialOfficeTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Office Title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/oOfficialImgView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oOfficialNameTxtView" />

    <TextView
        android:id="@+id/oOfficialPartyTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Official Party"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/oOfficialImgView"
        app:layout_constraintEnd_toEndOf="@+id/oOfficialImgView"
        app:layout_constraintStart_toStartOf="@+id/oOfficialImgView"
        app:layout_constraintTop_toBottomOf="@+id/oLocationTxtView" />

    <ImageView
        android:id="@+id/facebookImgView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toStartOf="@id/youtubeImgView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/youtubeImgView"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/youtubeImgView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/oOfficialImgView"
        app:layout_constraintEnd_toStartOf="@id/twitterImgView"
        app:layout_constraintStart_toEndOf="@+id/facebookImgView"
        app:layout_constraintTop_toBottomOf="@+id/oWebsiteTxtView"
        app:srcCompat="@drawable/youtube" />

    <ImageView
        android:id="@+id/twitterImgView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/oOfficialImgView"
        app:layout_constraintEnd_toStartOf="@+id/oOfficialImgView"
        app:layout_constraintStart_toEndOf="@id/youtubeImgView"
        app:layout_constraintTop_toBottomOf="@+id/oWebsiteTxtView"
        app:srcCompat="@drawable/twitter" />

    <TextView
        android:id="@+id/addressTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="2dp"
        android:text="Address:"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/oAddressTxtView" />

    <TextView
        android:id="@+id/phoneTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Phone:"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/addressTxtView"
        app:layout_constraintTop_toTopOf="@+id/oPhoneTxtView" />

    <TextView
        android:id="@+id/EmailTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Email:"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/phoneTxtView"
        app:layout_constraintTop_toTopOf="@+id/oEmailTxtView" />

    <TextView
        android:id="@+id/websiteTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Website:"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/EmailTxtView"
        app:layout_constraintTop_toTopOf="@+id/oWebsiteTxtView" />

    <TextView
        android:id="@+id/oAddressTxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="2dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/oPhoneTxtView"
        app:layout_constraintEnd_toStartOf="@+id/oOfficialImgView"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/oOfficialOfficeTxtView" />

    <TextView
        android:id="@+id/oPhoneTxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="2dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/oEmailTxtView"
        app:layout_constraintEnd_toStartOf="@+id/oOfficialImgView"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/oAddressTxtView" />

    <TextView
        android:id="@+id/oEmailTxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="2dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/oWebsiteTxtView"
        app:layout_constraintEnd_toStartOf="@+id/oOfficialImgView"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/oPhoneTxtView" />

    <TextView
        android:id="@+id/oWebsiteTxtView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="2dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/youtubeImgView"
        app:layout_constraintEnd_toStartOf="@+id/oOfficialImgView"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/oEmailTxtView" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <ImageView
        android:id="@+id/oPartyLogoImgView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/oOfficialImgView"
        app:layout_constraintEnd_toEndOf="@+id/oOfficialImgView"
        app:layout_constraintStart_toStartOf="@+id/oOfficialImgView"
        app:srcCompat="@drawable/dem_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>